@model  Asp.net_Mvc_Crud_Entityframework.Models.record

<form name="RecordForm">
    @Html.AntiForgeryToken();
    <div class="modal-header">
        <h4 class="modal-title">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <span>@*@(Model.id>0?"Update Record :Create New Record" )*@</span>
            <span>Create New Record</span>
        </h4>
    </div>
    <div class="modal-body">
        @Html.HiddenFor(c => c.id)
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(x => x.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(x => x.Name, new {htmlAttributes = new { @class = "form-control", required = true } })
                    @Html.ValidationMessageFor(x => x.Name, "", new {  @class = "text-danger" } )
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Address, new { @class = "control-label col-md-2" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(x => x.Address, new {htmlAttributes = new { @class = "form-control", required = true } })
                    @Html.ValidationMessageFor(x => x.Address, "", new {  @class = "text-danger" } )
                </div>

            </div>
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-sm pull-left" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-sm btn-sm pull-right" onclick="CreatOrUpdate()" >Save</button>
    </div>
</form>
